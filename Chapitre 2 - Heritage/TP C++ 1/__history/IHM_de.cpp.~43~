#include <vcl.h>
#include <random>
#include <time.h>
#include <stdlib.h>
#pragma hdrstop

#include "IHM_de.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
    random_device random;
	srand(time(NULL));
	long random = 1+rand()%6;
	Label1->Caption = random;
}
